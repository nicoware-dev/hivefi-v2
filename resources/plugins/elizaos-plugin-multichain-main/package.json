{
    "name": "@elizaos/plugin-multichain",
    "version": "0.1.0-alpha.2",
    "type": "module",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "dependencies": {
        "@elizaos/core": "^0.1.9",
        "bignumber.js": "9.1.2",
        "multichain-tools": "^4.0.0",
        "near-api-js": "5.0.1",
        "node-cache": "5.1.2",
        "tsup": "8.3.5",
        "zod": "3.23.8"
    },
    "scripts": {
        "build": "rm -rf dist && tsup --format esm,cjs --dts",
        "test": "vitest run",
        "test:watch": "vitest",
        "prepublishOnly": "pnpm build"
    },
    "peerDependencies": {
        "form-data": "4.0.1",
        "whatwg-url": "7.1.0"
    },
    "agentConfig": {
        "pluginType": "elizaos:plugin:1.0.0",
        "pluginParameters": {
          "NEAR_ADDRESS": {
            "type": "string",
